<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iconcust"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_alignStart="@+id/textView4"
        android:layout_alignTop="@+id/iconown"
        android:layout_marginStart="32dp"
        app:srcCompat="@drawable/customerbtn" />

    <ImageView
        android:id="@+id/iconown"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="198dp"
        app:srcCompat="@drawable/ownerbtn" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@+id/iconcust"
        android:layout_marginTop="31dp"
        android:layout_toStartOf="@+id/iconown"
        android:fontFamily="@font/arsenal"
        android:text="Müşteri"
        android:textAlignment="center"
        android:textSize="25sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_alignBaseline="@+id/textView4"
        android:layout_alignBottom="@+id/textView4"
        android:layout_alignParentEnd="true"
        android:fontFamily="@font/arsenal"
        android:text="Salon sahibi"
        android:textAlignment="center"
        android:textSize="25sp"
        android:textStyle="bold" />

</RelativeLayout>